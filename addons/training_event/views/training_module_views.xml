<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="training_module_list_view" model="ir.ui.view">
        <field name="name">training.module.list</field>
        <field name="model">training.module</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="true">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="event_id"/>
                <field name="session_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="training_module_form_view" model="ir.ui.view">
        <field name="name">training.module.form</field>
        <field name="model">training.module</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="event_id"/>
                        </group>
                        <group>
                            <field name="session_count" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Sessioni">
                            <field name="session_ids" mode="list,form">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="duration_hours"/>
                                    <field name="trainer_ids" widget="many2many_tags"/>
                                    <field name="state"/>
                                </list>
                                <form string="Sessione">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="module_id"/>
                                                <field name="event_id" readonly="1"/>
                                                <field name="date_start"/>
                                                <field name="date_end"/>
                                                <field name="duration_hours" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="trainer_ids" widget="many2many_tags"/>
                                                <field name="state" widget="statusbar" clickable="True"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Contenuti">
                                                <field name="description"/>
                                            </page>
                                            <page string="Materiali">
                                                <group>
                                                    <field name="materials"/>
                                                </group>
                                                <separator string="Allegati"/>
                                                <field name="attachment_ids" widget="many2many_binary"/>
                                            </page>
                                            <page string="Note">
                                                <field name="notes"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Note">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="training_module_search_view" model="ir.ui.view">
        <field name="name">training.module.search</field>
        <field name="model">training.module</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="event_id"/>
                <filter name="group_event" string="Evento" context="{'group_by': 'event_id'}"/>
            </search>
        </field>
    </record>

    <record id="training_module_act_window" model="ir.actions.act_window">
        <field name="name">Moduli Formativi</field>
        <field name="res_model">training.module</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
