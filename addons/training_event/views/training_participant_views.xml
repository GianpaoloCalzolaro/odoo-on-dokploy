<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="training_participant_list_view" model="ir.ui.view">
        <field name="name">training.participant.list</field>
        <field name="model">training.participant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="role"/>
                <field name="user_id" groups="training_event.group_training_admin"/>
            </list>
        </field>
    </record>

    <record id="training_participant_form_view" model="ir.ui.view">
        <field name="name">training.participant.form</field>
        <field name="model">training.participant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="name" readonly="1"/>
                            <field name="email" readonly="1"/>
                            <field name="phone" readonly="1"/>
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="user_id" attrs="{'invisible': [('role', '!=', 'trainer')], 'required': [('role', '=', 'trainer')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="training_participant_search_view" model="ir.ui.view">
        <field name="name">training.participant.search</field>
        <field name="model">training.participant</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <filter name="filter_students" string="Allievi" domain="[('role', '=', 'student')]"/>
                <filter name="filter_trainers" string="Formatori" domain="[('role', '=', 'trainer')]"/>
                <filter name="group_role" string="Ruolo" context="{'group_by': 'role'}"/>
            </search>
        </field>
    </record>

    <record id="training_participant_act_window" model="ir.actions.act_window">
        <field name="name">Partecipanti</field>
        <field name="res_model">training.participant</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
